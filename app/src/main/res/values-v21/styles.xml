<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Material.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="myTheme" parent="android:Theme.Material.Light" />

    <style name="GreenTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/material_green_500</item>
        <item name="colorPrimaryDark">@color/material_green_700</item>
        <item name="colorAccent">@color/material_purple_a700</item>
        <item name="colorControlNormal">@color/material_green_500</item>
        <item name="colorControlActivated">@color/material_lime_a700</item>
        <item name="colorControlHighlight">@color/material_green_a200</item>
        <item name="android:windowBackground">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/material_green_a200</item>
        <item name="android:navigationBarColor">@color/material_lime_a700</item>
    </style>

    <style name="notitlebar" parent="android:Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:colorPrimary">@color/material_green_500</item>
    </style>
</resources>